{% block sw_product_image_context_cover_action %}
    {% parent %}

    {% block sw_product_image_context_flip_action %}
        <sw-context-menu-item
            v-if="!isFlip && !isCover"
            class="sw-product-image__button-cover"
            @click="$emit('sw-product-image-flip')"
        >
            Use as flip
        </sw-context-menu-item>
        <sw-context-menu-item
            v-if="isFlip && !isCover"
            class="sw-product-image__button-cover"
            variant="danger"
            @click="$emit('sw-product-image-flip-delete')"
        >
            Remove flip
        </sw-context-menu-item>
    {% endblock %}
{% endblock %}


{% block sw_product_image_preview %}
    {% parent %}

    <sw-label
        v-if="isFlip && !isCover"
        class="sw-product-image__flip-label"
        variant="primary"
        size="medium"
        appearance="pill"
    >
        Flip
    </sw-label>
{% endblock %}
